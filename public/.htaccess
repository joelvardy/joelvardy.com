<Files .htaccess>
	order allow,deny
	deny from all
</Files>

<IfModule mod_rewrite.c>

	Options -Multiviews -Indexes +FollowSymLinks
	RewriteEngine On
	RewriteBase /
	DirectorySlash Off

	# Remove trailing slash
	RewriteRule ^(.*)\/(\?.*)?$ $1$2 [R=301,L]

	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteRule ^ index.php [L]

</IfModule>